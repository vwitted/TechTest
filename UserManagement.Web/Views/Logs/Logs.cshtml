@using UserManagement.Models
@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<ActionLog>

<h2>Action Logs</h2>

@if(Model.Count == 0)
{
    <h4>No logs...</h4>
}
else
{
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Action</th>
                <th>Timestamp</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.UserId</td>
                    <td>@log.Action</td>
                    <td>@log.Timestamp</td>
                </tr>
            }
        </tbody>
    </table>
    <hr />

    @if (Model.Count < Model.PageSize)
    {
        @Html.PagedListPager(Model, page => Url.Action("Logs", new { page }))
    }
}
